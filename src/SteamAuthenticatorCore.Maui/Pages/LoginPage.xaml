<?xml version="1.0" encoding="utf-8" ?>
<controls:BaseContentPage
    x:Class="SteamAuthenticatorCore.Mobile.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SteamAuthenticatorCore.Mobile.Controls"
    xmlns:viewModels="clr-namespace:SteamAuthenticatorCore.Mobile.ViewModels"
    Title="Login"
    x:DataType="viewModels:LoginViewModel"
    x:TypeArguments="viewModels:LoginViewModel"
    Shell.TabBarIsVisible="False">

    <VerticalStackLayout
        Margin="10"
        HorizontalOptions="FillAndExpand"
        Spacing="10"
        VerticalOptions="CenterAndExpand">

        <Border Padding="5">
            <Entry
                IsEnabled="False"
                IsReadOnly="True"
                Placeholder="Login"
                Text="{Binding Path=Account.AccountName}" />
        </Border>


        <Border Padding="5">
            <Entry
                IsEnabled="{Binding IsPasswordBoxEnabled}"
                IsPassword="True"
                Placeholder="Password"
                Text="{Binding Path=Password}" />
        </Border>

        <Button Command="{Binding LoginCommand}" Text="Login" />

    </VerticalStackLayout>
</controls:BaseContentPage>