<?xml version="1.0" encoding="utf-8" ?>
<resources>

	<color name="LongPressColor">#C7C7C7</color>
	<color name="AccentColor">#2196F3</color>
	<color name="TappedColor">#E0E0E0</color>

	<style name="MainTheme" parent="MainTheme.Base">
    <!-- As of Xamarin.Forms 4.6 the theme has moved into the Forms binary -->
    <!-- If you want to override anything you can do that here. -->
    <!-- Underneath are a couple of entries to get you started. -->

    <!-- Set theme colors from https://aka.ms/material-colors -->
    <!-- colorPrimary is used for the default action bar background -->
    <!--<item name="colorPrimary">#2196F3</item>-->
    <!-- colorPrimaryDark is used for the status bar -->
    <!--<item name="colorPrimaryDark">#1976D2</item>-->
    <!-- colorAccent is used as the default value for colo
	rControlActivated
         which is used to tint widgets -->

    <item name="colorPrimary">#2196F3</item>
    <item name="colorAccent">@color/AccentColor</item>
    <item name="android:textColor">#575757</item>

    <item name="android:colorLongPressedHighlight">@color/LongPressColor</item>

    <item name="android:colorPressedHighlight">@color/TappedColor</item>
    <item name="android:colorFocusedHighlight">@color/TappedColor</item>
    <item name="android:colorActivatedHighlight">@color/TappedColor</item>
    <item name="android:activatedBackgroundIndicator">@color/TappedColor</item>

	</style>
</resources>