<Application x:Class="SteamDesktopAuthenticatorCore.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:SteamDesktopAuthenticatorCore.ViewModels"
             xmlns:views="clr-namespace:SteamDesktopAuthenticatorCore.Views"
             StartupUri="Views/InitializeWindowView.xaml" >

    <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <ResourceDictionary Source="pack://application:,,,/WpfHelper;component/Themes/ColourfulDarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModels:ConfirmationViewModel}">
                <views:ConfirmationsView/>
            </DataTemplate>

         </ResourceDictionary>
    </Application.Resources>
</Application>
