<Application
    x:Class="SteamAuthenticatorCore.Desktop.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="clr-namespace:SteamAuthenticatorCore.Desktop.Helpers">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WPFUI;component/Styles/Theme/Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/WPFUI;component/Styles/WPFUI.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <helpers:CopyCommand x:Key="CopyCommand" />
            <helpers:DoubleToIntConverter x:Key="DoubleToIntConverter" />
            <BooleanToVisibilityConverter x:Key="BoolToVis" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
