<Application
    x:Class="SteamDesktopAuthenticatorCore.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commands="clr-namespace:WpfHelper.Commands;assembly=WpfHelper"
    xmlns:common="clr-namespace:SteamDesktopAuthenticatorCore.Common"
    xmlns:converters="clr-namespace:WpfHelper.Converters;assembly=WpfHelper"
    xmlns:markupExtension="clr-namespace:WpfHelper.MarkupExtension;assembly=WpfHelper">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WPFUI;component/Styles/Theme/Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/WPFUI;component/Styles/WPFUI.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <commands:CopyCommand x:Key="CopyCommand" />
            <converters:DoubleToIntConverter x:Key="DoubleToIntConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
