<Page
    x:Class="SteamAuthenticatorCore.Desktop.Views.Pages.CaptchaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CaptchaPage"
    d:DataContext="{d:DesignInstance viewModels:CaptchaViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <Label Content="Please enter the following captcha code:" />

            <Image
                Width="500"
                Height="100"
                RenderOptions.BitmapScalingMode="Fant"
                RenderOptions.EdgeMode="Unspecified"
                Source="{Binding Path=Image}"
                Stretch="Fill" />

            <TextBox
                Margin="0,5,0,0"
                Padding="5"
                Text="{Binding Path=CaptchaCode, UpdateSourceTrigger=PropertyChanged}" />

            <Button
                Height="35"
                Margin="0,5,0,0"
                Command="{Binding Path=SubmitCommand}"
                Content="Submit" />

        </StackPanel>
    </Grid>
</Page>
